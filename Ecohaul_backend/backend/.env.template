# Environment Variables Template
# Copy this file to .env and fill in your Supabase details

# Database Configuration (Get from Supabase Settings > Database)
SUPABASE_DB_URL=jdbc:postgresql://db.YOUR_PROJECT_REF.supabase.co:5432/postgres
SUPABASE_DB_USERNAME=postgres
SUPABASE_DB_PASSWORD=YOUR_DATABASE_PASSWORD

# Supabase API Configuration (Get from Supabase Settings > API)
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# JWT Configuration (Generate a strong secret)
JWT_SECRET=your-256-bit-secret-key-here
JWT_EXPIRATION=86400000
